{
    "nix.enableLanguageServer": true,
    "nix.serverSettings": {
        "nil": {
            "formatting": {
                "command": ["nixfmt"]
            }
        }
    },
    "[nix]": {
        "editor.defaultFormatter": "jnoortheen.nix-ide",
        "editor.insertSpaces": true,
        "editor.tabSize": 2
    },
    "nixEnvSelector.nixFile": "${workspaceFolder}/shell.nix"
}
